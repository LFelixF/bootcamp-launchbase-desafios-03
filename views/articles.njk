{% extends "layout.njk" %}

{% block head %}
    <title>Artigos</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"rel="stylesheet">
{% endblock %}

{% block content %}
    <div id="wrapper">
        <h1>Artigos</h1>
    </div>

    <section class="cards">
        {% for item in items %}
            <div class="card" id="{{item.id}}">
                <div class="card-img">
                    <img src="{{item.image_url}}" alt="Logo">
                </div>

                <div class="card-container">
                    <h1>{{item.title}}</h1>
                </div>

                <div class="card-info">
                    <p>{{item.author}}</p>
                    <p class="card-time">{{item.duration}}</p>
                </div>
            </div>
        {% endfor %}
    </section>

    <script src="./scripts.js"></script>
{% endblock %}